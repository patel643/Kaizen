<head>
  <script src="/javascripts/search.js.js" charset="utf-8"></script>
  <script src="//cdn.quilljs.com/1.3.3/quill.js"></script>
  <script src="//cdn.quilljs.com/1.3.3/quill.min.js"></script>
  <link href="//cdn.quilljs.com/1.3.3/quill.snow.css" rel="stylesheet">
  <link href="//cdn.quilljs.com/1.3.3/quill.bubble.css" rel="stylesheet">
</head>

<div class="box">
<script>console.log(notes)</script>
{{#unless notes.length}}
    <p>No matching notes found</p>
{{/unless}}
{{#each notes}}

<article class="media">
  <div class="media-left">
    <figure class="image is-64x64">
      <img src="../images/search.png" alt="Image">
    </figure>
  </div>
  <div class="media-content">
    <div class="content">
      <h1>{{this.name}}</h1>
      <p>{{ this.notebooks.notebookname}}</p>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item" onClick="viewNote({{{json this.notebooks.notes.content}}});" class="button is-link">
            <span class="icon is-small"><i class="fa fa-eye"></i></span>View Note</a>
        </div>
      </nav>
    </div>
  </div>
</article>
{{/each}}
</div>

<div id="model" class="modal viewModel">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">View Note</p>
      <button onClick="cancelModel();" id="cancel" class="modal-close" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <div id="editor">
      </div>
    </section>
    <footer class="modal-card-foot">
      <button  onClick="cancelModel();" class="button cancelModel">Cancel</button>
    </footer>
  </div>
</div>

<script src="https://cdn.quilljs.com/1.3.3/quill.js"></script>
